{
  "name": "pms-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npx prisma generate && tsc -p tsconfig-production.json",
    "start": "node dist/index.js",
